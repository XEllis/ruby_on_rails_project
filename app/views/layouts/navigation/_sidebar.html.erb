
  <div class="main-sidebar">
    <div class="sidebar">
      <div class="user-panel">
        <div class="pull-left image">
          <img alt="User Image" class="user-image" src="http://placehold.it/160x160" />
        </div>
        <div class="pull-left info">
          <% if user_signed_in? %>
            <p><%= current_user.email %></p>
          <% end %>
          <% if user_signed_in? %>
            <i class="fa fa-circle text-success">
            Online</i>
          <% else %>
            <i class="fa fa-circle text-gray">
              Offline</i>
          <% end %>
        </div>
      </div>
      <ul class="sidebar-menu">
        <li class="header">
          OPTIONS
        </li>
        <% if user_signed_in? %>
          <li>
            <%= link_to('Show All Companies', companies_path) %>
          </li>
          <li>
            <%= link_to('Show All Jobs', jobs_path) %>
          </li>
          <li>
            <%= link_to "Search Jobs By Companies", new_search_path %>
          </li>
        <% else %>
          <li class="active">
            <%= link_to('Login for Options', dashboards_path) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
