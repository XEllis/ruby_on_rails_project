<h1>Search Result</h1>
<br/>
<div class="field", align="center">
  <%= link_to 'Create New Job', new_job_path %> |
  <%= link_to 'Apply For Job', new_application_path %>
</div><br/>

  <% if @search.search_companies.empty? %>
    <p>No Jobs Found</p>
  <% else %>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <thead>
            <tr>
              <th>Company</th>
              <th>Employment Type</th>
              <th>Created On</th>
              <th>Job Description</th>
              <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% @search.search_companies.each do |c| %>
              <% c.jobs.map do |j| %>
                <tr>
                  <td><%= link_to c.name, company_path(c.id), method: :get %></td>
                  <td><%= j.employment_type %></td>
                  <td><%= j.created_at.to_date %></td>
                  <td><%= j.description %></td>
                  <td>
                    <%= link_to "Show", job_path(j.id) %> |
                    <%= link_to "Edit", edit_job_path(j.id) %> |
                    <%= link_to 'Destroy', j, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
    <br>
    <br>
    <hr>
  <% end %>