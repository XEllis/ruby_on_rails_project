<p id="notice"><%= notice %></p>

<h1>Applications for <%= @job.description %></h1>

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>ID</th>
            <th>Current Company</th>
            <th>Linkedin URL</th>
            <th>Portfolio URL</th>
            <th>Resume</th>
            <th>Cover Letter</th>
            <th>Submission Status</th>
            <th>Actions</th>
          </tr>
          </thead>

          <tbody>
          <% @applications.each do |application| %>
            <tr>
              <td><%= application.id %></td>
              <td><%= application.current_company %></td>
              <td><%= application.linkedIn_URL %></td>
              <td><%= application.portfolio_URL %></td>
              <td><%= link_to 'Download', application.resume.url if application.resume? %></td>
              <td><%= link_to 'Download', application.cover.url if application.cover? %></td>
              <td><%= application.status.submission_status%> <%= link_to 'Update Status', edit_status_path(application.status) %></td>
              <td><%= link_to 'Show', application %> |
                <%= link_to 'Edit', edit_application_path(application) %> |
                <%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<br>
