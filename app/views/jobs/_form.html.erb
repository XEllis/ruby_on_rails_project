<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :company_id %><br/>
    <%= select("job", "company_id", Company.all.collect{ |c| [ c.name, c.id] }) %>
  </div><br/>

  <div class="field">
    <%= form.label :description %><br/>
    <%= form.text_field :description, id: :job_description %>
  </div><br/>

  <div class="field">
    <%= form.label :employment_type %><br/>
    <%= form.select :employment_type, ['Contractor', 'Co-op', 'Full-time', 'Internship', 'Part-time', 'Others'], id: :job_employment_type %>
  </div><br/>

  <div class="field">
    <%= form.label :responsibilities %><br/>
    <%= form.text_area :responsibilities, id: :job_responsibilities %>
  </div><br/>

  <div class="field">
    <%= form.label :requirements %><br/>
    <%= form.text_area :requirements, id: :job_requirements %>
  </div><br/>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
